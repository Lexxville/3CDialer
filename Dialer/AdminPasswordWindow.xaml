<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="Dialer.AdminPasswordWindow"
	x:Name="Window"
	Title="Change admin password..."
	Width="300" Height="225" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" Icon="favicon.ico">

    <Grid x:Name="LayoutRoot" Background="#FFA1DCF7">
        <Label Content="Enter Password:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="106.993"/>
        <Label Content="Repeat Password:" HorizontalAlignment="Left" Margin="10,53,0,0" VerticalAlignment="Top" Width="106.993"/>
        <PasswordBox x:Name="pwd_pass2" HorizontalAlignment="Left" Margin="121.993,53,0,0" VerticalAlignment="Top" Width="162.007" Height="25.96" Padding="5,2,0,0"/>
        <PasswordBox x:Name="pwd_pass1" HorizontalAlignment="Left" Margin="121.993,10,0,0" VerticalAlignment="Top" Width="162.007" Height="25.96" Padding="5,2,0,0"/>
        <Button Content="OK" HorizontalAlignment="Left" Margin="212,115,0,0" VerticalAlignment="Top" Width="72" Height="23" Click="OK_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="121.993,115,0,0" VerticalAlignment="Top" Width="74.007" Height="23" Click="Cancel_Click"/>
        <TextBlock x:Name="tb_passStatus" HorizontalAlignment="Left" Margin="122,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="26" Width="162" Foreground="Red"/>
    </Grid>
</Window>