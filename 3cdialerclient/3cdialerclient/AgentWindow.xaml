<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="_cdialerclient.AgentWindow"
	x:Name="Window"
	Title="AgentWindow"
	Width="660" Height="495" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Background="#FFEEFFFD">

    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="423*"/>
        </Grid.RowDefinitions>
        <Menu HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" Width="654" Grid.Row="1" Grid.RowSpan="2">
            <MenuItem Header="_File" Height="25" Margin="0,0,5,0">
                <MenuItem Header="_Logout" HorizontalAlignment="Left" Width="125"/>
                <MenuItem Header="_Exit" Click="menu_exit_Click" HorizontalAlignment="Left" Width="125"/>
            </MenuItem>
            <MenuItem Header="_Settings" Margin="0,0,5,0"/>
            <MenuItem Header="_About" Margin="0,0,5,0"/>
        </Menu>
        <Grid HorizontalAlignment="Left" Height="423" Grid.Row="2" VerticalAlignment="Top" Width="654">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="1" HorizontalAlignment="Left" Height="400.297" VerticalAlignment="Top" Width="290.667" Background="White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="169*"/>
                    <RowDefinition Height="177*"/>
                    <RowDefinition Height="55*"/>
                </Grid.RowDefinitions>
                <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="  Script" VerticalAlignment="Top" Width="290.667" Height="23.96" Background="Black" Foreground="#FFF7EE33" Padding="0,2,0,0"/>
                <TextBox ScrollViewer.VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" Text="Sample script..." Margin="0,23.96,0,0" Foreground="Blue" FontSize="14" IsReadOnly="True"/>
                <TextBlock HorizontalAlignment="Left" Grid.Row="1" TextWrapping="Wrap" Text="  Shortcuts" VerticalAlignment="Top" Width="290.667" Height="26.96" Background="Black" Foreground="#FFFDFD04" Padding="0,3,0,0"/>
                <ListView Name="lv_shortList" HorizontalAlignment="Left" Height="150" Margin="0,27,-0.333,0" Grid.Row="1" VerticalAlignment="Top" Width="291" Background="#FFE8E8E8">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="{x:Type ListViewItem}">
                            <Setter Property="BorderBrush" Value="DarkGray" />
                            <Setter Property="BorderThickness" Value="1,1,1,1" />
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn DisplayMemberBinding="{Binding KShort}" Header="Key Shortcut" Width="140"/>
                            <GridViewColumn DisplayMemberBinding="{Binding Function}" Header="Function" Width="144"/>
                        </GridView>
                    </ListView.View>
                </ListView>
				<Button HorizontalAlignment="Left" VerticalAlignment="Top" Width="114" Height="25.051" Grid.Row="2" Margin="166.667,19.853,0,0">
                    <StackPanel Orientation="Horizontal" Width="104">
                        <Image Source="Refresh.ico" Margin="0,0,10,0"/>
                        <TextBlock Text="Refresh data" FontWeight="Bold" Foreground="#FF1D1D1B" FontSize="11" Width="72.783" Height="16.051"/>
                    </StackPanel>
                </Button>
            </Grid>
            <Grid HorizontalAlignment="Left" Height="423.297" VerticalAlignment="Top" Width="363.333" Margin="0,0,0,-0.297">
                <Grid.RowDefinitions>
                    <RowDefinition Height="115*"/>
                    <RowDefinition Height="26*"/>
                </Grid.RowDefinitions>
                <Button x:Name="btn_hold" HorizontalAlignment="Left" Margin="14,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="65" Height="61.051">
                    <StackPanel Orientation="Vertical">
                        <Image VerticalAlignment="Top" Source="ip-phone-hold-icon-key.png" Width="35" Height="35"/>
                        <TextBlock FontWeight="Bold" Foreground="#FF098CC9" Text="Hold Call" FontSize="12.667"/>
                    </StackPanel>
                </Button>
                <Button x:Name="btn_end" HorizontalAlignment="Left" Margin="99,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="65" Height="61.051">
                    <StackPanel Orientation="Vertical">
                        <Image VerticalAlignment="Top" Source="end_call.png" Width="35" Height="35"/>
                        <TextBlock Text="End Call" FontWeight="Bold" Foreground="Red" FontSize="12.667"/>
                    </StackPanel>
                </Button>
                <ListView x:Name="lv_dialcard" HorizontalAlignment="Left" Height="346.246" VerticalAlignment="Top" Width="363.333" Grid.RowSpan="2" SelectionMode="Single">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Dial Card" Width="355">
								<GridViewColumn.CellTemplate>
									<DataTemplate>
										<StackPanel Orientation="Horizontal" Height="30" Background="F7FDFF00">
											<Border BorderBrush="LightGray" BorderThickness="1">
											<TextBlock Width="200" Text="{Binding label}"/>
											</Border>
											<Border BorderBrush="LightGray" BorderThickness="1">
											<TextBlock Width="155" Text="{Binding val}"/>
											</Border>
										</StackPanel>
									</DataTemplate>
								</GridViewColumn.CellTemplate>
							</GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
                <Button x:Name="btn_Startcalls" HorizontalAlignment="Left" Margin="183,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="71" Height="61.051" Click="StartCalls">
                	<StackPanel Orientation="Vertical">
                		<Image VerticalAlignment="Top" Source="call-start.png" Width="35"/>
                		<TextBlock Text="Start Calls" FontWeight="Bold" Foreground="Green" FontSize="12.667"/>
                	</StackPanel>
                </Button>
                <Button x:Name="btn_Stopcalls" HorizontalAlignment="Left" Margin="273,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="71.333" Height="61.051" Click="StopCalls" IsEnabled="False">
                	<StackPanel Orientation="Vertical">
                		<Image VerticalAlignment="Top" Source="call-stop.png" Width="35"/>
                		<TextBlock Text="Stop Calls" FontWeight="Bold" Foreground="#FFFB0B00" FontSize="12.667"/>
                	</StackPanel>
                </Button>
            </Grid>
            <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="0,400.297,0,-0.297" TextWrapping="Wrap" Text="Logged in as ADMIN" VerticalAlignment="Top" Width="290.667" Height="23" Background="#FF05345B" Foreground="#FF14F0D2" FontFamily="Verdana" FontSize="12.667" Padding="3,3,0,0"/>
        </Grid>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Campaign - Demo" VerticalAlignment="Top" Height="19" Width="654" Background="#FF252424" Foreground="White"/>
    </Grid>
</Window>